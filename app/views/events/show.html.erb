<p id="notice"><%= notice %></p>

<p>
  <h1><%= link_to @event.name, @event.conferenceurl %> 	<%= link_to "iCal + deadlines", { :controller => 'events', :action => 'show', :format => :ics, :only_path => false}, :class => "new_button" %>
</h1>
  <h2><%= @event.nameLong %> </h2>
  <h3><%= duration(@event) %></h3>

</p>


<p>
  <b>Precisdeadline:</b>
  <%= precisdeadline(@event) %>
</p>

<p>
  <b>Fullpaperdeadline:</b>
  <%= fullpaperdeadline(@event) %>
</p>  
<p>
  <b>H-Index:</b>
  <%= @event.hindex %>
</p>
<p>
  <b>Conference is peer reviewed:</b>
  <%= @event.peerreviewed %>
</p>
<p>
  <b>City:</b>
  <%= @event.city %>
</p>

<p>
  <b>Country:</b>
  <%= @event.country %>
</p>

<p>
	<b>Distance to Erlangen:</b>
<%= @event.distance_to("Erlangen, Tennenlohe",units = :km).round(2) %> km
</p>

<p>
  <b>Comments:</b>
  <%= @event.comments %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@event) %>
</p>

<p>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=920x500&sensor=false&zoom=4&markers=#{@event.latitude}%2C#{@event.longitude}" %>
</p>

<h2>Attendees</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Planning to submit</th>
    <th>Submitted</th>
    <th>Accepted</th>
    <th>Attending</th>
	<th></th>
  </tr>

<% @event.attendances.each do |attendance| %>
  <tr>
    <td><%= attendance.name %></td>
	
    <td><%= check_box_tag '', attendance.id, attendance.planningtosubmit , disabled: true %></td>
    <td><%= check_box_tag '', attendance.id, attendance.submitted , disabled: true %></td>
    <td><%= check_box_tag '', attendance.id, attendance.accepted , disabled: true %></td>
    <td><%= check_box_tag '', attendance.id, attendance.attending , disabled: true %></td>
	<td><%= link_to 'Delete', [attendance.event, attendance],
               :confirm => 'Are you sure?',
               :method => :delete %> 
		    <%= link_to 'Edit', edit_event_attendance_path(@event,attendance) %>
</td>
  </tr>
<% end %>
</table>


<h2>Add an Attendee:</h2>

<%= form_for([@event, @event.attendances.build]) do |f| %>
<table>

<tr>
    <td>Name <%= f.text_field :name %></td>
	<td>Planning to submit a paper <%= f.check_box :planningtosubmit %></td>
	<td>Paper submitted <%= f.check_box :submitted %></td>
	<td>Paper accepted  <%= f.check_box :accepted %></td>	
	<td>Attending Conference <%= f.check_box :attending %></td>
 </tr>
</table>
<p>
  <%= f.submit 'Add Attendee', :class => 'btn btn-success' %>
</p>
<% end %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
